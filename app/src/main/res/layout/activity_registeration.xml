<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_bg_dark"
    tools:context=".modules.register.RegisterationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/new_logo_white"/>
        

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginEnd="40dp"
       android:layout_marginStart="40dp"
       android:layout_marginBottom="20dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1">
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               >
               <LinearLayout
                   android:id="@+id/register_lay"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:orientation="horizontal">

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/name_input_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/white"
                           android:backgroundTint="@color/white"
                           app:startIconTint="@color/colorAccent"
                           app:startIconDrawable="@drawable/person_ic">

                           <EditText
                               android:textSize="12sp"
                               android:id="@+id/username"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:backgroundTint="@color/white"
                               android:ems="10"
                               android:hint="@string/full_name"
                               android:inputType="text" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:orientation="horizontal">

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/phone_input_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/white"
                           app:startIconTint="@color/colorAccent"
                           android:backgroundTint="@color/white"
                           app:startIconDrawable="@drawable/phone_blue_ic">

                           <EditText
                               android:textSize="12sp"
                               android:id="@+id/phon_num"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:backgroundTint="@color/white"
                               android:hint="@string/mobile_number"
                               android:minEms="11"
                               android:maxEms="11"
                               android:inputType="number" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:orientation="horizontal">

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/email_input_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/white"
                           android:backgroundTint="@color/white"
                           app:startIconTint="@color/colorAccent"
                           app:startIconDrawable="@drawable/email_ic">

                           <EditText
                               android:textSize="12sp"
                               android:id="@+id/email"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:backgroundTint="@color/white"
                               android:ems="10"
                               android:hint="@string/e_mail"
                               android:inputType="textEmailAddress" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:orientation="horizontal">

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/password_input_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/white"
                           android:backgroundTint="@color/white"
                           app:passwordToggleEnabled="true"
                           app:startIconTint="@color/colorAccent"
                           app:startIconDrawable="@drawable/password_ic">

                           <EditText
                               android:textSize="12sp"
                               android:id="@+id/password"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:backgroundTint="@color/white"
                               android:ems="10"
                               android:hint="@string/password"
                               android:inputType="textPassword" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:orientation="horizontal">

                       <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/repassword_input_layout"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/white"
                           android:backgroundTint="@color/white"
                           app:passwordToggleEnabled="true"
                           app:startIconTint="@color/colorAccent"
                           app:startIconDrawable="@drawable/password_ic">

                           <EditText
                               android:textSize="12sp"
                               android:id="@+id/repassword"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                               android:layout_centerVertical="true"
                               android:backgroundTint="@color/white"
                               android:ems="10"
                               android:hint="@string/con_password"
                               android:inputType="textPassword" />

                       </com.google.android.material.textfield.TextInputLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/date_lay"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:padding="15dp"
                       android:orientation="horizontal">

                       <ImageView
                           android:id="@+id/dateofbirth_input_layout"
                           android:layout_width="24dp"
                           android:layout_height="match_parent"
                           android:background="@color/white"
                           android:src="@drawable/calendar_ic"
                           android:layout_marginEnd="10dp"
                           />

                       <TextView
                           android:textSize="14sp"
                           android:id="@+id/date_of_birth"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:hint="@string/date_of_birth"
                           />



                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginBottom="10dp"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginStart="10dp"
                           android:src="@drawable/gender_ic" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:layout_marginStart="15dp"
                           android:gravity="center_vertical"
                           android:text="@string/gender" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_marginEnd="10dp"
                           android:layout_weight="1"
                           android:gravity="end"
                           android:orientation="horizontal">

                           <RadioButton
                               android:id="@+id/gender_male"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:textSize="12sp"
                               android:textColor="@color/colorAccent"
                               android:text="@string/male" />

                           <RadioButton
                               android:id="@+id/gender_female"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:textSize="12sp"
                               android:textColor="@color/colorAccent"
                               android:text="@string/female" />
                       </LinearLayout>

                   </LinearLayout>



                   <TextView
                       android:visibility="gone"
                       android:id="@+id/privacy_btn"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:layout_marginTop="20dp"
                       android:padding="5dp"
                       android:text="@string/rouls_conditions"
                       android:textColor="@color/colorPrimary"
                       android:textSize="14sp" />
               </LinearLayout>
           </ScrollView>
       </LinearLayout>
   </androidx.cardview.widget.CardView>

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/register_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/doctor_registration_pager"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_green"/>
        <TextView
            android:id="@+id/register_text_btn"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="متابعة التسجيل"/>


    </LinearLayout>

    <include layout="@layout/progress_layout"
        android:id="@+id/register_progrss_lay"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"/>

</LinearLayout>