<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:background="@drawable/green_btn_porder"
            android:id="@+id/book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:background="@drawable/top_rounded_blue_bg"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/day_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الإثنين"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/day_date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17/9"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5:00 م"
                    android:textColor="@color/gray" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/end_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5:00 م"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>